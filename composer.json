{
    "name": "cristianoc72/psr2-code-generator",
    "description" : "Toolset for generating PHP code following PSR-2 standard",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Thomas Gossmann",
        "homepage": "http://gos.si"
        },
        {
            "name": "Cristiano Cinotti",
            "email": "cristianocinotti@gmail.com"
        }
    ],
    "keywords": [
        "code generation", "PSR-2"
    ],
    "autoload": {
        "psr-4": {
            "cristianoc72\\codegen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "cristianoc72\\codegen\\tests\\": "tests/"
        }
    },
    "require": {
        "php" : ">=7.2",
        "gossi/docblock" : "~1",
        "symfony/options-resolver" : "^4"
    },
    "require-dev" : {
        "phpunit/phpunit" : "^7",
        "phpstan/phpstan": "^0.11.6",
        "vimeo/psalm": "^3.2"
    }
}
